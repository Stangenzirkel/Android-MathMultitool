<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    tools:context=".ConvertorFragment" >

    <Button
        android:id="@+id/btn_numeral_system_input"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/blue_1"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_converter_input" />

    <Button
        android:id="@+id/btn_numeral_system_result"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/blue_1"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_converter_result" />

    <TextView
        android:id="@+id/tv_converter_input"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_converter_result"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:rotation="90"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_converter_input" />

    <LinearLayout
        android:id="@+id/converter_keyboard"
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:layout_marginTop="20dp"
        android:maxHeight="416dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/kl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_solution"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Solution"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="2.37"
                android:backgroundTint="@color/blue_1"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="del"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kl_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_ca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.824"
                android:backgroundTint="@color/blue_1"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="CA"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kl_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_e"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="E"
                android:textAllCaps="false"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="F"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kl_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="0.9"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="C"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="D"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kl_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/gray_1"
                android:textSize="34sp"
                app:icon="@drawable/ic_keyboard"
                app:iconSize="40dp"
                app:iconTint="@color/gray_1" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_3"
                android:fontFamily="@font/arimo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text=","
                android:textColor="@color/gray_1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1.112"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="A"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/btn_margin"
                android:layout_weight="1.112"
                android:backgroundTint="@color/gray_4"
                android:fontFamily="@font/advent_pro_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="B"
                android:textColor="@color/gray_1"
                android:textSize="34sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>